<div class="shadow-xl -m-1 flex md:-m-2 px-3 md:px-6 rounded-lg border-4 border-double border-blue bg-blue_shade max-h-96">
    <div class="w-1/2 md:w-2/3 flex flex-col md:pr-2 font-light">
        <div class="flex flex-col basis-2/3 items-center justify-center pr-2">
            <h3 class="text-2xl md:text-4xl text-center">{{ songTitle }}</h3>
            <span class="hidden md:block text-sm md:text-2xl">by</span>
            <h3 class="hidden md:block text-2xl md:text-4xl text-center">Romain Axisa</h3>
        </div>
        <ul class="flex basis-1/2 items-center justify-between text-medium text-3xl md:text-6xl px-4 md:px-12">
            <li>
                <a class="hover:text-azure" href="{{ ytSource }}" target="_blank">
                    <i class="fa-brands fa-youtube"></i>
                </a>
            </li>
            <li>
                <a class="hover:text-azure" href="{{ spotifySource }}" target="_blank">
                    <i class="fa-brands fa-spotify"></i>
                </a>
            </li>
            <li>
                <a class="hover:text-azure" href="{{ iTunesSource }}" target="_blank">
                    <i class="fa-brands fa-itunes-note"></i>
                </a>
            </li>
        </ul>
    </div>
    <div class="w-1/2 md:w-1/3 flex justify-center md:justify-end pl-2 py-3 md:py-6">
        <a href="{{ ytSource}}" target="_blank">
            <img class="rounded-lg" src="{{ imageSource }}" alt="{{ imageAlt }}"/>
        </a>
    </div>
</div>